<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".postFragment.PostFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/new_post"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/post_write"
            android:layout_width="274dp"
            android:layout_height="88dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="84dp"
            android:hint="@string/enter_your_post"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:singleLine="false"
            app:layout_constraintStart_toEndOf="@+id/post_camera"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/post_photo"
            android:layout_width="93dp"
            android:layout_height="106dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/post_camera"
            android:layout_width="76dp"
            android:layout_height="34dp"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintEnd_toEndOf="@+id/post_photo"
            app:layout_constraintStart_toStartOf="@+id/post_photo"
            app:layout_constraintTop_toBottomOf="@+id/post_photo"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="144dp"
            android:text="@string/place_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_camera" />

        <EditText
            android:id="@+id/place_name"
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="35dp"
            android:hint="@string/enter_the_place_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/click_map"
            tools:ignore="TouchTargetSizeCheck" />

